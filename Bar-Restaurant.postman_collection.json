{
	"info": {
		"_postman_id": "bar-restaurant-api",
		"name": "Bar Restaurant API",
		"description": "Bar Restaurant Management System API Collection\n\nServices:\n- Gateway: 8082 (main entry point)\n- Data: 8086\n- Session: 8087\n- UI: 3000",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "gateway_url",
			"value": "http://localhost:8082",
			"type": "string"
		},
		{
			"key": "data_url",
			"value": "http://localhost:8086",
			"type": "string"
		},
		{
			"key": "session_url",
			"value": "http://localhost:8087",
			"type": "string"
		},
		{
			"key": "ui_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "session_id",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Gateway Service",
			"description": "API Gateway - Main entry point for all requests",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{gateway_url}}/api/v1/gateway/p/health",
							"host": ["{{gateway_url}}"],
							"path": ["api", "v1", "gateway", "p", "health"]
						},
						"description": "Check gateway health and all dependent services"
					}
				}
			]
		},
		{
			"name": "Session Service",
			"description": "Authentication and session management",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{gateway_url}}/api/v1/sessions/p/health",
							"host": ["{{gateway_url}}"],
							"path": ["api", "v1", "sessions", "p", "health"]
						}
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.session_id) {",
									"    pm.collectionVariables.set('session_id', jsonData.data.session_id);",
									"    console.log('Session ID saved:', jsonData.data.session_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}"
						},
						"url": {
							"raw": "{{gateway_url}}/api/v1/sessions/p/login",
							"host": ["{{gateway_url}}"],
							"path": ["api", "v1", "sessions", "p", "login"]
						},
						"description": "Authenticate user and get session token"
					}
				},
				{
					"name": "Validate Session",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"session_id\": \"{{session_id}}\"\n}"
						},
						"url": {
							"raw": "{{gateway_url}}/api/v1/sessions/p/validate",
							"host": ["{{gateway_url}}"],
							"path": ["api", "v1", "sessions", "p", "validate"]
						},
						"description": "Validate an existing session token"
					}
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{session_id}}"
							}
						],
						"url": {
							"raw": "{{gateway_url}}/api/v1/sessions/logout",
							"host": ["{{gateway_url}}"],
							"path": ["api", "v1", "sessions", "logout"]
						},
						"description": "Logout and invalidate session (requires authentication)"
					}
				}
			]
		},
		{
			"name": "Data Service",
			"description": "Database and configuration management",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{gateway_url}}/api/v1/data/p/health",
							"host": ["{{gateway_url}}"],
							"path": ["api", "v1", "data", "p", "health"]
						}
					}
				},
				{
					"name": "Settings",
					"item": [
						{
							"name": "Get Settings by Service",
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"service\": \"gateway\"\n}"
								},
								"url": {
									"raw": "{{data_url}}/api/v1/data/settings/by-service",
									"host": ["{{data_url}}"],
									"path": ["api", "v1", "data", "settings", "by-service"]
								},
								"description": "Get all settings for a specific service"
							}
						},
						{
							"name": "Get Setting by Key",
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"service\": \"gateway\",\n    \"key\": \"SERVER_PORT\"\n}"
								},
								"url": {
									"raw": "{{data_url}}/api/v1/data/settings/by-key",
									"host": ["{{data_url}}"],
									"path": ["api", "v1", "data", "settings", "by-key"]
								},
								"description": "Get a specific setting by service and key"
							}
						},
						{
							"name": "Create Setting",
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"service\": \"test\",\n    \"key\": \"TEST_KEY\",\n    \"value\": \"test_value\",\n    \"description\": \"A test setting\"\n}"
								},
								"url": {
									"raw": "{{data_url}}/api/v1/data/settings",
									"host": ["{{data_url}}"],
									"path": ["api", "v1", "data", "settings"]
								},
								"description": "Create a new setting"
							}
						},
						{
							"name": "Update Setting",
							"request": {
								"method": "PUT",
								"header": [
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"service\": \"test\",\n    \"key\": \"TEST_KEY\",\n    \"value\": \"updated_value\"\n}"
								},
								"url": {
									"raw": "{{data_url}}/api/v1/data/settings",
									"host": ["{{data_url}}"],
									"path": ["api", "v1", "data", "settings"]
								},
								"description": "Update an existing setting"
							}
						},
						{
							"name": "Delete Setting",
							"request": {
								"method": "DELETE",
								"header": [
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"service\": \"test\",\n    \"key\": \"TEST_KEY\"\n}"
								},
								"url": {
									"raw": "{{data_url}}/api/v1/data/settings",
									"host": ["{{data_url}}"],
									"path": ["api", "v1", "data", "settings"]
								},
								"description": "Delete a setting"
							}
						}
					]
				}
			]
		},
		{
			"name": "Direct Service Access",
			"description": "Direct access to services (bypassing gateway)",
			"item": [
				{
					"name": "Data Service - Root",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{data_url}}/",
							"host": ["{{data_url}}"],
							"path": [""]
						}
					}
				},
				{
					"name": "Data Service - Health",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{data_url}}/api/v1/data/p/health",
							"host": ["{{data_url}}"],
							"path": ["api", "v1", "data", "p", "health"]
						}
					}
				},
				{
					"name": "Data Service - Stats",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{data_url}}/api/v1/data/p/stats",
							"host": ["{{data_url}}"],
							"path": ["api", "v1", "data", "p", "stats"]
						}
					}
				},
				{
					"name": "Session Service - Health",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{session_url}}/api/v1/sessions/p/health",
							"host": ["{{session_url}}"],
							"path": ["api", "v1", "sessions", "p", "health"]
						}
					}
				},
				{
					"name": "UI Service - Health",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{ui_url}}/health",
							"host": ["{{ui_url}}"],
							"path": ["health"]
						}
					}
				}
			]
		}
	]
}
